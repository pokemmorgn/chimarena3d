# Server Configuration
NODE_ENV=development
PORT=2567
HOST=localhost

# Colyseus Configuration
COLYSEUS_MONITOR=true
COLYSEUS_PLAYGROUND=true

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/chimarena3d
MONGODB_TEST_URI=mongodb://localhost:27017/chimarena3d-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRE_TIME=15m
JWT_REFRESH_EXPIRE_TIME=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Game Configuration
MAX_PLAYERS_PER_ROOM=2
MATCHMAKING_TIMEOUT=30000

# Logging
LOG_LEVEL=debug

# Future MetaMask Integration
ETHEREUM_NETWORK=goerli
INFURA_PROJECT_ID=your-infura-project-id
